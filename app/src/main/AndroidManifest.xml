<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scanmate">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScanMate">
        <activity
            android:name=".ui.activity.WarehouseDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.AddWarehouseActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.UpdateProductActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.ScannerCameraActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.BusinessLocationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.MenuActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.CreateCartonActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.ScannerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".storage.MainActivity"
            android:exported="false" />
    </application>

</manifest>