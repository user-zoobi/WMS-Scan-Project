<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bottomsheets.BottomSheetFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/qrMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/amiko"
        android:textAlignment="center"
        android:text="Thanks for creating carton\nbelow is your QR code"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/qrIV"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@+id/qrMessage"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/qr_code_black" />

</RelativeLayout>